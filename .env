# Wind OS Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/wind
DATABASE_TEST_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/wind_test

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# LLM Provider API Keys
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=2023-05-15
OPENAI_API_MODEL=gpt-4-turbo

ANTHROPIC_API_KEY=
ANTHROPIC_API_BASE=https://api.anthropic.com
ANTHROPIC_API_MODEL=claude-3-opus-20240229

AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_BASE=
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_API_DEPLOYMENT=

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Security
JWT_SECRET=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Logging
LOG_LEVEL=INFO

# Worker Configuration
WORKER_CONCURRENCY=2
TASK_QUEUE=wind_tasks
